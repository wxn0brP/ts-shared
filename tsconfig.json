{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "composite": true,
        "declaration": true,
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "packages",
        "index.ts"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}